<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/card_border"
    android:layout_marginEnd="@dimen/card_border"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="33dp"
        android:layout_gravity="center|start"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
            />
    <ImageView
        android:id="@+id/list_item_artist_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/list_img_left_margin"
        android:layout_gravity="center|start"
        android:scaleType="centerCrop"
        tools:src="@drawable/airport_icn" />

    <TextView
        android:id="@+id/list_item_artist_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/list_text_left_margin"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimary"
        tools:text="Type Name" />

</FrameLayout>
